{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_view'|trans({'%title%': category.title|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_view'|trans({'%title%': category.title|default('')}) }}</h1>
    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{ category.title }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ category.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ category.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.slug'|trans }}</dt>
            <dd>{{ category.slug }}</dd>
            <dt>{{ 'label.books'|trans }}</dt>

            {% for book in books %}
                <dd>{{ book.title }}</dd>
            {% endfor %}
        </dl>
    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.book_not_found'|trans
            } %}
        </p>
    {% endif %}
    <a href="{{ url('category_index') }}">{{ 'action.back_to_list'|trans }}</a>
{% endblock %}