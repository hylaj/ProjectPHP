{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_view'|trans({'%title%': category.title|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_view'|trans({'%title%': category.title|default('')}) }}</h1>
    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{ category.title }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ category.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ category.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.slug'|trans }}</dt>
            <dd>{{ category.slug }}</dd>
            <dt>{{ 'label.books'|trans }}</dt>
    {% if books is defined and books|length %}
            {% for book in books %}
                <dd><a class="text-decoration-none" href="{{ url('book_show', {id: book.id}) }}">{{ book.title }}</a></dd>
            {% endfor %}
            <dt>{{ 'label.item_author'|trans }}</dt>
            <dd>{{ category.itemAuthor.firstName}}</dd>
    {% endif %}
        </dl>

        <dd>
            {% if is_granted('EDIT', category) %}
                <a class="btn btn-styled" href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'action.edit'|trans }}">{{ 'action.edit'|trans }}</a>
            {% endif %}
            {% if is_granted('DELETE', category) %}
                    <a class="btn btn-styled" href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action.delete'|trans }}">{{ 'action.delete'|trans }}</a>
            {% endif %}
        </dd>
<p>
    <a href="{{ url('category_index') }}" title="{{ 'action.back_to_list'|trans }}">
        {{ 'action.back_to_list'|trans }}
    </a>
</p>
    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.category_not_found'|trans
            } %}
        </p>
    {% endif %}
{% endblock %}