{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.tag_view'|trans({'%title%': tag.title|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.tag_view'|trans({'%title%': tag.title|default('')}) }}</h1>
    {% if tag is defined and tag|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ tag.id }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{ tag.title }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ tag.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ tag.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.slug'|trans }}</dt>
            <dd>{{ tag.slug }}</dd>

        <dd>
            {% if is_granted('EDIT', tag) %}
                <a class="btn btn-styled btn-sm" href="{{ url('tag_edit', {id: tag.id}) }}" title="{{ 'action.edit'|trans }}">{{ 'action.edit'|trans }}</a>
            {% endif %}
            {% if is_granted('DELETE', tag) %}
                <a class="btn btn-styled btn-sm" href="{{ url('tag_delete', {id: tag.id}) }}" title="{{ 'action.delete'|trans }}">{{ 'action.delete'|trans }}</a>
            {% endif %}
     </dd>
        <p>
            <a href="{{ url('book_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.tag_not_found'|trans
            } %}
        </p>
    {% endif %}
{% endblock %}