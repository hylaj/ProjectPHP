{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="main-content pb-4">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            {{ 'message.logged_in_as'|trans }}{{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">{{ 'action.logout'|trans }}</a>
        </div>
    {% endif %}

    <h2 class=" mb-4 text-primary">{{ 'action.login'|trans }}</h2>
    <label for="inputEmail">{{ 'label.email'|trans }}</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" autocomplete="email" required autofocus>
    <label for="inputPassword">{{ 'label.password'|trans }}</label>
    <input type="password" name="password" id="inputPassword" class="form-control mb-4" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-primary" type="submit">
        {{ 'action.sign_in'|trans }}
    </button>
</form>
    </div>
{% endblock %}
