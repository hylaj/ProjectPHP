{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.book_list'|trans }}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col text-start py-4"><h2 class="mb-4 text-primary">{{ 'title.book_list'|trans }}</h2></div>
        <div class="col text-end py-4"><a class="btn btn-styled" href="{{ url('book_create') }}" title="{{ 'action.create_book'|trans }}">{{ 'action.create_book'|trans }}</a></div>
    </div>
    {% if pagination is defined and pagination.items|length %}

        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
               {# <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'book.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'book.createdAt') }}</th>
               #}
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'book.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.author'|trans, 'book.author') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'category.title')  }}</th>
                {# <th>{{ 'label.actions'|trans }}</th>
                 <th>{{ 'label.edit'|trans }}</th>
                <th>{{ 'label.delete'|trans }}</th>
                #}
            </tr>
            </thead>
            <tbody>
            {% for book in pagination.items %}
                <tr>
                    {#  <td>{{ book.id }}</td>
                    <td>{{ book.createdAt|format_date('long')}}</td>
                    #}
                    <td><a class="text-decoration-none" href="{{ url('book_show', {id: book.id}) }}">{{ book.title }}</a></td>
                    <td>{{ book.author }}</td>
                    <td><a class="text-decoration-none" href="{{ url('category_show', {id: book.category.id}) }}">{{ book.category.title }}</a></td>
                    {# <td><a class="btn btn-styled btn-sm" href="{{ url('book_show', {id: book.id}) }}" title="{{ 'action.show'|trans }}">{{ 'action.show'|trans }}</a>
                   <a class="btn btn-styled btn-sm" href="{{ url('book_edit', {id: book.id}) }}" title="{{ 'action.edit'|trans }}">{{ 'action.edit'|trans }}</a>
                        <a class="btn btn-styled btn-sm" href="{{ url('book_delete', {id: book.id}) }}" title="{{ 'action.delete'|trans }}">{{ 'action.delete'|trans }}</a></td>#}
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.empty_list'|trans
            } %}
        </p>
    {% endif %}
{% endblock %}