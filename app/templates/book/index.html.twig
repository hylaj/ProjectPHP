{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.book_list'|trans }}
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col text-start py-4"><h2 class="mb-4 text-primary">{{ 'title.book_list'|trans }}</h2></div>
       {% if is_granted('CREATE') %}
           <div class="col text-end py-4"><a class="btn btn-styled" href="{{ url('book_create') }}" title="{{ 'action.create_book'|trans }}">{{ 'action.create_book'|trans }}</a></div>
       {% endif %}
    </div>
    {% if pagination is defined and pagination.items|length %}

        <table class="table table-bordered table-striped table-hover">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'book.title') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.author'|trans, 'book.author') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'category.title')  }}</th>
                <th>{{  'label.tags'|trans }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.availability'|trans, 'book.available')  }}</th>

            </tr>
            </thead>
            <tbody>
            {% for book in pagination.items %}
                <tr>

                    <td>
                        <a class="text-decoration-none" href="{{ url('book_show', {id: book.id}) }}">{{ book.title }}</a>
                    </td>

                    <td>{{ book.author }}</td>

                    <td>
                        <a class="btn btn-outline-primary"
                           href="{{ url('book_index', {'categoryId' : book.category.id}) }}"
                           title="{{ book.category.title }}">
                            {{ book.category.title }}
                        </a>
                    </td>

                    <td>{% if book.tags is defined and book.tags|length %}
                            {% for tag in book.tags %}
                                <a class="btn btn-outline-primary"
                                   href="{{ url('book_index', {'tagId' : tag.id}) }}"
                                   title="{{ tag.title }}">
                                    {{ tag.title }}
                                </a>
                            {% endfor %}
                        {% else %}
                            &nbsp;
                        {% endif %}
                    </td>

                    <td>
                        {%  if book.available == true %}{{ 'label.available'|trans  }}
                    {% else %}
                        {{ 'label.not_available'|trans  }}
                    {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {% include 'default/_single_alert_message.html.twig' with {
                type: 'warning',
                message: 'message.empty_list'|trans
            } %}
        </p>
    {% endif %}
{% endblock %}